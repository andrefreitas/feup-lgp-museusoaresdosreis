<div class="box">
  <div class="menu">
    <div class="option">Gerir Administradores</div>
    <div class="option active">Gerir Eventos</div>
  </div>
  <div class="actions">
    <%= render "eventsActions" %>
  </div>
  <div class="view" id="addEvent">

    <div class="notifications">

    </div>

    <input type="date" name="date"/>
    <input type="text" name="local" placeholder="Localização"/>
