<% content_for :title, "Línguas" %>
<%= render :partial => "admin/header" %>
<div class="box">
  <%= render :partial => "admin/menu"  %>
  <div class="actions">
    <%= render :partial => "admin/adminActions"  %>
  </div>

  <div class="view" id="languages">
    <div class="notifications">
      <% if flash[:notice] %>
          <div class="success"><%=flash[:notice]%></div>
      <% end %>
    </div>

    <% if @missingLangs.length > 0 %>
    <div class="new">
    <select id="newLang">
      <% @missingLangs.each do |lang| %>
          <option value="<%=lang[:code] %>"><%=lang[:name]%></option>
      <% end %>
    </select>
    <button id="addLanguageButton" class="redButton">Adicionar Língua</button>
    </div>
    <% end %>

    <% @language.each do |lang|%>
        <div class="lang" id="<%=lang.id %>">
          <div class="name"><%=lang.name %></div>
          <div class="action">
            <% if lang.code != "pt"%><button class="delete">Eliminar</button><% end%>
          </div>
        </div>
    <% end %>

  </div>
</div>
