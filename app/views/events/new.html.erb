<% content_for :title, "Criar Evento" %>
<%= render :partial => "admin/header" %>
<div class="box">
  <%= render :partial => "admin/menu"  %>
  <div class="actions">
    <%= render :partial => "admin/eventsActions"  %>
  </div>

  <div class="view" id="addEvent">
    <div class="notifications"></div>

    <form action="/events" method="post" onsubmit="return validateAddEvent()" enctype="multipart/form-data">
      <input type="text" name="title" id="titleVal" placeholder="TÃ­tulo"/>
      <input type="text" name="date" id="dateVal" placeholder="Ano"/>
      <textarea rows="10" placeholder="Inserir texto" name="content" id="contentVal"></textarea><br/>
      <div class="imagesArea-new">
        <div class="image-div">
          <div class="left">
          <%=image_tag("default-avatar.png", alt: "default image", id: "preview1", width: 74, height: 78)%>
          <input type="file" name="image1" id="image1Val" class="upload custom-file-input"/>
          </div>
          <div class="right">
            <textarea rows="5" placeholder="Legenda" name="caption1" class="captionText" id="caption1Val"></textarea>
          </div>
        </div>
        <div class="image-div">
          <div class="left">
            <%=image_tag("default-avatar.png", alt: "default image", id: "preview2", width: 74, height: 78)%>
            <input type="file" name="image2" id="image2Val" class="upload custom-file-input"/>
          </div>
          <div class="right">
            <textarea rows="5" placeholder="Legenda" name="caption2" class="captionText" id="caption2Val"></textarea>
          </div>
        </div>
        <div class="image-div">
          <div class="left">
            <%=image_tag("default-avatar.png", alt: "default image", id: "preview3", width: 74, height: 78)%>
            <input type="file" name="image3" id="image3Val" class="upload custom-file-input"/>
          </div>
          <div class="right">
            <textarea rows="5" placeholder="Legenda" name="caption3" class="captionText" id="caption3Val"></textarea>
          </div>
        </div>
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
      <button class="redButton" id="addEventButton">Adicionar Evento</button>
    </form>

  </div>

</div>